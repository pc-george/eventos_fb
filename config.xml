<?xml version='1.0' encoding='utf-8'?>
<widget id="george.cracker.events" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Events</name>
    <description>
        Búsqueda de eventos publicados en Facebook a realizarse cerca de la ubicación del usuario
    </description>
    <author email="george.jlpc@gmail.com" href="https://www.linkedin.com/in/jorge-luis-perez-canto">George Cracker</author>
    <content src="index.html" />
    <preference name="orientation" value="portrait" />
    <preference name="ShowTitle" value="true" />
    <access origin="https://m.facebook.com" />
    <access origin="https://graph.facebook.com" />
    <access origin="https://api.facebook.com" />
    <access origin="https://*.fbcdn.net" />
    <access origin="https://*.akamaihd.net" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="file://*/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="browser" spec="^5.0.1" />
    <engine name="android" spec="^6.3.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-console" />
    <plugin name="cordova-plugin-dialogs" />
    <plugin name="cordova-plugin-statusbar" />
</widget>
